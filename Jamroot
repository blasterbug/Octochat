import modules ;
BOOST_ROOT = [ modules.peek : BOOST_ROOT ] ;
use-project /boost : $(BOOST_ROOT) ;

project octonet
    # Source location
    :
    # Requirements
    : requirements <include>include <source>/boost//log <source>/boost//serialization <source>/boost//system <source>/boost//thread
    # Default build
    : default-build <threading>multi <link>static
    # Build directory
    :
    ;

exe octotest : src/octotest/octotest.cpp ;
exe octochat : src/octochat/chat.cpp ;
